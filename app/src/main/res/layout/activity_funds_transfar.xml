<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountWallet.FundsTransfar"
    android:background="@color/white">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/relativeLayout"
                android:paddingTop="5dp">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/left_back"
                    android:background="@drawable/circle"
                    android:onClick="back22"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/notification_page"
                    android:background="@color/white"
                    android:layout_alignEnd="@id/profile_imagebutton"
                    android:id="@+id/noti_imagebutton"
                    android:layout_marginEnd="60dp"
                    android:onClick="noti_trans"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile"
                    android:background="@color/white"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/profile_imagebutton"
                    app:tint="@color/black"
                    android:layout_marginEnd="20dp"
                    android:onClick="profilimage"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:textAlignment="textStart"
                android:text="Funds Transfer"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_bold"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/relativeLayout"
                android:layout_marginTop="20dp"
                android:id="@+id/text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/text"
                android:id="@+id/linear">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/task_alt"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:text="Funds Successfuly
Transffered"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="22sp"
                    android:text="$1,000"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="09 Feb 2023 09:35  AM"
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Receipt:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/inter_bold"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/textview1"
                app:layout_constraintTop_toBottomOf="@id/linear" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/textview1"
                android:id="@+id/linear2"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:elevation="1dp"
                android:background="@drawable/spinner_bg_radio"
                android:layout_marginTop="5dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/upload"
                    android:background="@color/transparent"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="09 Feb 2023 09:35  AM"
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"/>


            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notify with email"
                app:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:onClick="noti_email"
                android:id="@+id/upload_photo"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="40dp"
                android:textAllCaps="false"
                app:icon="@drawable/tg"
                app:iconGravity="textStart"/>


</androidx.constraintlayout.widget.ConstraintLayout>