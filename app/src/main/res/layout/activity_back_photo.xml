<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup.BackPhoto1"
    android:orientation="vertical"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/left_back"
            android:background="@drawable/circle"
            android:layout_margin="20dp"
            android:onClick="back3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textAlignment="textStart"
            android:text="Position the back of your document in the frame"
            android:textColor="@color/white"
            android:fontFamily="@font/youtube_sans_dark_semibold"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Ensure lighting is good and lettering is clear"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:fontFamily="@font/youtube_sans_dark_medium"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <androidx.camera.view.PreviewView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/pre"/>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit photo"
            android:background="@drawable/button_bg_white"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:onClick="submit_btn2"
            android:id="@+id/upload_photo"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Retake photo"
            android:background="@drawable/button_bg_blue"
            android:textColor="@color/blue"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:onClick="retake_btn2"
            android:id="@+id/retake_photo"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

    </LinearLayout>


</LinearLayout>